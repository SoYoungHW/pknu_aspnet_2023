@model _01_myPortfolio.Models.BoardModel

@{
    ViewData["Title"] = "게시판 글삭제";
}

<div style="padding:50px;" class="mt-5">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h4 class="text-primary">게시판 글삭제</h4>
            </div>
            <div class="col-4 text-end">
            </div>
            <div class="row">
                <div class="col">
                    <h5 action="text-warning">삭제하시겠습니까?</h5>
                </div>
            </div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md">
                <form asp-action="DeletePost">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control" readonly />
                    </div><br />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" readonly />
                    </div><br />
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <p>
                            @Html.Raw(Model.Content);
                        </p>
                    </div><br />
                    <div class="form-group">
                        <button type="submit" value="삭제" class="btn btn-danger">
                            삭제
                        </button>
                        <a asp-controller="Board" asp-action="Index" class="btn btn-secondary">
                            목록
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
