@model _01_myPortfolio.Models.BoardModel

@{
    ViewData["Title"] = "게시판 글쓰기";
}

<div style="padding:50px;" class="mt-5">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h4 class="text-primary">게시판 글쓰기</h4>
            </div>
            <div class="col-4 text-end">
            </div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<로그인 할때 사용 input type="hidden" asp-for="UserId" value="@User.Identity.Name" /> *@
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control editor" rows="10"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <button type="submit" value="저장" class="btn btn-primary">
                            저장
                        </button>
                        <a asp-controller="Board" asp-action="Index" class="btn btn-secondary">
                            목록
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
