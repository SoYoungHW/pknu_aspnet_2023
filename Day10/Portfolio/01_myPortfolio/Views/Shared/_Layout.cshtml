<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Astro Motion by TemplateMo</title>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/themes/astro_motion/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/themes/astro_motion/css/slick.css" type="text/css" />
    <link rel="stylesheet" href="~/themes/astro_motion/css/templatemo-style.css">

    <!--우리 사이트용 추가 CSS-->
    <!--WYSWYG 링크-->
    <link rel="stylesheet" href="~/lib/trumbowyg/ui/trumbowyg.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--아이콘-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!--토스트메세지 창 js 라이브러리용 CSS-->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!--포트폴리오 사진 슬라이드를 위한 owl-->
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
</head>

<body>
    <main class="main" id="top">
        <video autoplay muted loop id="bg-video">
            <source src="~/themes/astro_motion/video/gfp-astro-timelapse.mp4" type="video/mp4">
        </video>
        <div class="page-container">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="cd-slider-nav">
                            <nav class="navbar navbar-expand-lg" id="tm-nav">
                                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Astro Motion</a>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-supported-content" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbar-supported-content">
                                    <ul class="navbar-nav mb-2 mb-lg-0">
                                        <li class="nav-item selected">
                                            <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index" data-no="1">Home</a>
                                            <div class="circle"></div>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#2" data-no="2">Gallery</a>
                                            <div class="circle"></div>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Board" asp-action="Index" data-no="3">About</a>
                                            <div class="circle"></div>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#0" data-no="4">Contact</a>
                                            <div class="circle"></div>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    

    <div class="container-fluid">
        <footer class="row mx-auto tm-footer">
            <div class="col-md-6 px-0">
                Copyright 2021 Astro Motion Company Limited. All rights reserved.
            </div>
            <div class="col-md-6 px-0 tm-footer-right">
                Designed by <a rel="sponsored" href="https://templatemo.com" target="_blank" class="tm-link-white">TemplateMo</a>
            </div>
        </footer>
    </div>

        @*<script src="vendors/@popperjs/popper.min.js"></script>*@
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <script src="~/themes/astro_motion/js/jquery-3.5.1.min.js"></script>
    <script src="~/themes/astro_motion/js/bootstrap.min.js"></script>
    <script src="~/themes/astro_motion/js/slick.js"></script>
    <script src="~/themes/astro_motion/js/templatemo-script.js"></script>>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
