<!DOCTYPE html>
<html lang="ko" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - IoT_Portfilo</title>

    <link rel="stylesheet" href="~/themes/klean/public/assets/css/theme.css" />
    <link rel="stylesheet" href="~/themes/klean/public/assets/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--우리 사이트용 추가 CSS-->
    <!--WYSWYG 링크-->
    <link rel="stylesheet" href="~/lib/trumbowyg/ui/trumbowyg.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--아이콘-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!--토스트메세지 창 js 라이브러리용 CSS-->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!--포트폴리오 사진 슬라이드를 위한 owl-->
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
</head>

<body>
    <main class="main" id="top">
        <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3 d-block navbar-klean" data-navbar-on-scroll="data-navbar-on-scroll">
            <div class="container">
                <a class="navbar-brand" href="index.html"> <img class="me-3 d-inline-block" src="~/themes/klean/public/assets/img/gallery/logo.png" alt="" /></a>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto pt-2 pt-lg-0 font-base">
                        <li class="nav-item px-2" data-anchor="data-anchor">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link fw-medium active" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#portfolio">Portfolio</a></li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#board">Board</a></li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#contact">Contact</a></li>
                    </ul>
                    <form class="ps-lg-5">
                        <button class="btn btn-link text-primary fw-bold order-1 order-lg-0" type="button">Sign in</button>
                        <button class="btn btn-light shadow-klean order-0" type="submit"><span class="text-gradient fw-bold">Sign Up</span></button>
                    </form>
                </div>
            </div>
        </nav>
    </main>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - _01_myPortfolio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
        @*<script src="vendors/@popperjs/popper.min.js"></script>*@
    <script src="~/themes/klean/public/vendors/popperjs/popper.min.js"></script>
    <script src="~/themes/klean/public/vendors/is/is.min.js"></script>
    <script src="~/themes/klean/public/vendors/is/is.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
    <script src="~/themes/klean/public/vendors/feather-icons/feather.min.js"></script>

    <script>
        feather.replace();
    </script>
    <script src="~/themes/klean/public/assets/js/theme.js"></script>
    <script src="~/js/owl.carousel.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
