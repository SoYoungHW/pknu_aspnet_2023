@model _01_myPortfolio.Models.RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<!-- 회원가입 페이지-->

<div class="container-fluid tm-content-container mt-4">
    <ul class="cd-hero-slider mb-0 py-5">
        <div class="mx-auto page-width-2">
            <div class="row">
                <div class="col-md-6 tm-contact-center">
                    <form asp-action="Register">
                        <img src="~/signup.png" width="100" />
                        <hr />
                        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                        <div class="form-floating">
                            <input asp-for="UserId" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="UserId">Id</label>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label asp-for="Password">Password</label>
                        </div>

                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label asp-for="ConfirmPassword">Password Check</label>
                        </div>

                        <div class="form-floating">
                            <input asp-for="PhoneNumber" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="PhoneNumber">Phone Number</label>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="Email">Email Address</label>
                        </div>

                        <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>
                    </form>
                </div>
            </div>
        </div>
    </ul>
</div>


