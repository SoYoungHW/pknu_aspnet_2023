@model _01_myPortfolio.Models.LoginModel
@{
    ViewData["Title"] = "Sign up";
}

<!-- 로그인 페이지-->

<div class="container-fluid tm-content-container mt-4">
    <ul class="cd-hero-slider mb-0 py-5">
        <div class="mx-auto page-width-2">
            <div class="row">
                <div class="col-md-6 tm-contact-center">
                    <form asp-action="Login"> 
                        <img src="~/signin.png" width="100" />
                        <hr />
                        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                        <div class="form-floating">
                            <input asp-for="UserId" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="UserId">Id</label>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label asp-for="Password">Password</label>
                        </div>

                        <div class="form-check text-start my-3">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                            <label asp-for="RememberMe" class="form-check-label">
                                Remember me
                            </label>
                        </div> 
                        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
                        <p class="mt-5 mb-3 text-body-secondary">© 2017–2023</p>
                    </form>
                </div>
            </div>
        </div>
    </ul>
</div>


